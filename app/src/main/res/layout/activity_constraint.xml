<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraint.ConstraintActivity">


    <View
        android:id="@+id/linea_verde"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#006600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linea_blanca"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.33" />


    <View
        android:id="@+id/linea_blanca"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/linea_verde"
        app:layout_constraintEnd_toStartOf="@id/linea_roja"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.34" />


    <ImageView
        android:id="@+id/circulo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img"
        app:layout_constraintBottom_toBottomOf="@id/linea_blanca"
        app:layout_constraintEnd_toEndOf="@id/linea_blanca"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@id/linea_blanca"
        app:layout_constraintTop_toTopOf="@id/linea_blanca"
        app:layout_constraintVertical_bias="0.499" />

    <View
        android:id="@+id/linea_roja"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0000"
        app:layout_constraintStart_toEndOf="@id/linea_blanca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.33" />
</androidx.constraintlayout.widget.ConstraintLayout>